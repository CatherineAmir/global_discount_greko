<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="move_edi_form_inherit" model="ir.ui.view">
            <field name="name">ProjectName.move_edi.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='duedate']" position="after">
                    <separator/>
                    <filter name="edi_error_message_group_by" context="{'group_by':'edi_error_message'}"/>
                    <filter name="edi_error_message_filter" string="Edi Error" domain="[('edi_error_count','>',0)]" />

                </xpath>

            </field>
        </record>



         <record id="retry_error_action_sign_invoices" model="ir.actions.server">
            <field name="name">Retry Sign invoices</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="code">
                action = records.action_retry_edi_documents_error()
            </field>
        </record>
    </data>
</odoo>